{
	"name" : "Converter",
	"version" : "1.0",
	"description" : "Convertisseur de vid√©o youtube",
	"browser_action": {
		"default_popup" : "default_popup.html",
		"default_icon": "assets/icon_1.png",
		"icons": {
			"16": "assets/icon_1_16.png",
      "48": "assets/icon_1_48.png",
      "128": "assets/icon_1.png"
		}
	},
	"background": {
    "scripts": ["js/background.js"],
		"persistent": false
  },
	"content_scripts" : [
		{
			"matches" : ["<all_urls>"],
			"js" : ["js/content.js"],
			"persistent": true
		}
	],
	"permissions": [
		"storage",
		"downloads",
		"tabs",
		"<all_urls>"
	],
	"manifest_version" : 2
}
