{
	"name" : "Converter",
	"version" : "1.0",
	"description" : "Convertisseur de vid√©o youtube",
	"browser_action" : {
		"default_popup" : "popup.html"
	},
	"background": {
    "scripts": ["js/background.js"],
		"persistent": false
  },
	"content_scripts" : [
		{
			"matches" : ["<all_urls>"],
			"js" : ["js/content.js"],
			"persistent": true
		}
	],
	"permissions": [
		"storage",
		"downloads",
		"tabs",
		"<all_urls>"
	],
	"manifest_version" : 2
}
